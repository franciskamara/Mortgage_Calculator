        <br /><br />

        <button style="background-color:green" class="btn btn-primary" @onclick="DisplayResults">Results</button>
    </div>

    <!-- RESULTS OUTPUT -->
    <br />
    <div title="Results display">
        @if (resultSet?.PaymentItems?.Count > 0 && errorMessage == string.Empty)// Results output
        {
            <!-- 0) Header -->
            <div style="border: #34495e; border-width: 10px; border-style: solid; border-radius: 10px; padding: 15px;">
                <br />
                <div class="h4 pb-2 mb-4 text-danger border-bottom">
                    <h3>Your Results</h3>
                </div>

                <!-- 1) Line chart output -->
                <div><LineChartOutput resultSet="resultSet"></LineChartOutput></div>

                <!-- 2) Total repayment, Capital, and Interest only values -->
                <!-- Total repayment amount -->
                <font style="margin-bottom:0; display: block;" size="3" title="Total Repayment Amount">
                    Total Repayment Amount:
                    @if (mTypeSelect == MortgageType.Standard)
                    {
                        <span> £@resultSet.TotalAmount.ToString("N2")</span>
                    }
                    else
                    {
                        <span> £@calcTotalRepayForInterestOnlyLoan().ToString("N2")</span>
                    }
                </font>

                <!-- Capital repayment amount -->
                <font style="margin-top:-2; display: block;" size="0" title="Capital Repayment Value">
                    Capital repayment is £@calcPrinciple().ToString("N2")
                </font>

                <!-- Interest repayment amount -->
                <font style="margin-top:-3; display: block;" size="0" title="Interest Repayment Value">
                    Interest repayment is
                    @if (mTypeSelect == MortgageType.Interest_Only)
                    {
                        <span> £@calcIntTotal().ToString("N2")</span>
                    }
                    else
                    {
                        <span> £@calcPrinciple().ToString("N2")</span>
                    }
                </font>

                <!-- 3) One month's repayment amount -->
                <font size="3" title="Monthly Repayment Value">
                    Monthly Repayment Amount: £@resultSet.MonthlyRepayments[0].ToString("N2")
                </font>

                <br />
                <!-- 4) Total repayment months -->
                <font size="3" title="Total repayment months">
                    @if (resultSet.MonthlyRepayments != null && resultSet.MonthlyRepayments.Count > 0)
                    {
                        <span>Total Repayment Months: @resultSet.MonthlyRepayments.Count</span>
                    }
                    else
                    {
                        <span>0 months</span>
                    }
                </font>

                <!-- 5) End of Year repayment balance -->
                <details class="display-block">
                    <summary title="List of annual remaining repayments">
                        <font size="3" class="fs-7" style="color:blue">
                            Remaining debt breakdown
                        </font>
                    </summary>
                    <font size="2">
                        <table>
                            <thead>
                                <tr>
                                    <th scope="col">Year End &nbsp</th>
                                    <th scope="col">Remaining Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (PaymentItem item in resultSet.PaymentItems)
                                {
                                    if (item.Date.Month == 12) // Check if the month is December
                                    {
                                        int firstYear = resultSet.PaymentItems[0].Date.Year;
                                        <tr>
                                            <th scope="row">
                                                Year @(item.Date.Year - firstYear + 1)
                                            </th>
                                            @*<th scope="row">@item.Date.ToString("MM/yyyy") &nbsp</th>*@
                                            @if (mTypeSelect == MortgageType.Standard)
                                            {
                                                <!-- For standard mortgage, display remaining balance -->
                                                <td>£@item.RemainingAmount.ToString("N2")</td>
                                            }
                                            else
                                            {
                                                <!-- For interest-only mortgage, display only principal -->
                                                <td>£@userInput.Amount.ToString("N2")</td>
                                            }
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </font>
                </details>
                <br />

                <!-- 6) Warning indicator of repayment increase, 3% -->
                <div class="alert alert-warning" role="alert" style="text-align:center">
                    <p class="fs-6">
                        @resultSet.WarningIndicator
                    </p>
                </div>

            </div>
        }
    </div>
}

