@page "/calculatorInput"
@using System;
@using Mortgage_Calculator


@code
{
    [Parameter]
    public UserInput userInput { get; set; }


}

<form method="post">
    <div class="font-colour">
        <div class="space-y-3 border-bottom">
            <div class="text-[28px] lg:text-[38px] font-bold">
                <label>Loan amount: </label>
            </div>
            <div class="space-y-2 border-b border-gray-400 pb-4">
                <p>If the loan is not for a new mortgage, enter the amount left on your current mortgage</p>
                <div class="flex">
                    <span aria-hidden="true" class="py-2 px-3 rounded-l border-gray-400 border border-solid">£</span>
                    <InputNumber @bind-Value="userInput.Amount" class="border-gray-400 border-b border-l-0 w-full border pl-2 ml-0 h-auto"></InputNumber>
                </div>
            </div>
        </div>

        <div class="space-y-3 border-bottom">
            <div class="text-[28px] lg:text-[38px] font-bold">
                <label>Loan term: </label>
            </div>
            <div class="space-y-2 border-b border-gray-400 pb-4">
                <div class="flex">
                    <InputNumber @bind-Value="userInput.Term" class="border-gray-400 border-b border-l-0 w-full border pl-2 ml-0 h-auto"></InputNumber>
                    <span aria-hidden="true" class="py-2 px-3 rounded-l border-gray-400 border border-solid">years</span>
                </div>
            </div>
        </div>

        <div class="space-y-3">
            <MortgageTypeSelect @bind-selection="userInput.Type"></MortgageTypeSelect>
            <br />
        </div>
        <div class="space-y-3">
            <label>Interest rate: %</label>
            <InputNumber @bind-Value="userInput.InterestRatePercentage"></InputNumber>
            <br /><br />
        </div>
        <div class="space-y-3">
            <label>Deposit (optional):</label>
            <InputNumber @bind-Value="userInput.Deposit"></InputNumber>
            <br /><br /><br>
        </div>
    </div>
</form>