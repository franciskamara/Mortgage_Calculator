@using System
@using Mortgage_Calculator

@code {
    [Parameter]
    public Results resultSet { get; set; }
}

<div class="row justify-content-between">
    <div class="col-12 col-md">
        <p class="text-xl mb-0 ">
            The monthly repayment will be:
        </p>
        <font style="margin-top: -3; display: block; padding-bottom: 10px;" size="0">
            This will begin next month if you were to take out the loan this month.
        </font>
    </div>
    <div class="col-12 col-md-auto">
        <p class="text-[38px] font-bold text-right col-12 col-md-auto">
            <span id="monthlyRepayment">£@resultSet.MonthlyRepayments.First().ToString("N2")</span>
        </p>
    </div>
</div>